---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<!-- <div class="internal-links">
		  <HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink> -->
	</nav>
</header>

<style>
	header {
		display: flex;
		width: fit-content;
		height: fit-content;
		margin: 1.5em 1.5em 0em 1.5em;
		border-radius: 2em;
		padding: 0.45em 0.25em;
		background: #333;
	}
	h2 {
		margin: 0;
		font-size: 0.75em;
		color: var(--light-grey);
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		width: fit-content;
		height: fit-content;
		width: 160px;
		box-shadow:
			0px 0px 0px 0px rgba(19, 21, 26, 0.3),
			0px 1px 2px 0px rgba(19, 21, 26, 0.29),
			0px 4px 4px 0px rgba(19, 21, 26, 0.26),
			0px 10px 6px 0px rgba(19, 21, 26, 0.15),
			0px 17px 7px 0px rgba(19, 21, 26, 0.04),
			0px 26px 7px 0px rgba(19, 21, 26, 0.01);
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--light-grey);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
